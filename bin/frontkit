#!/usr/bin/env ruby

require 'frontkit/profiling'
if ARGV.include? '--profile'
  Frontkit::Profiling.profiler = Frontkit::Profiling::RubyProfProfiler.new
end
Frontkit::Profiling.start

require "frontkit/extension"
Frontkit.setup_load_paths

require "frontkit/cli"

# Change directory to the root
Dir.chdir(ENV["MM_ROOT"]) if ENV["MM_ROOT"]

# Start the CLI
Frontkit::Cli::Base.start